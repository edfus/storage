/*
*
*        img
*
*/

.gslide-image {
  margin: 30px auto 0;
  box-shadow: 1px 2px 9px 0px rgba(0, 0, 0, 0.65);
}

.gslide-image > img {
  display: block;
  object-fit: cover;
  min-width: 200px;
  width: auto;
  max-height: calc(97vh - 30px);
  max-width: 100%;
  //touch-action: none; 
    /* can touch-action be auto inherited? */
}

.gslide-image > img.zoomable {
  position: relative;
}

.gslide-image > img.dragging {
  cursor: grabbing !important;
  transition: none;
}

.zoomed .gslide-image {
  box-shadow: none !important;
}

/* button */

.gbtn > svg {
  display: block;
}
.gbtn {
  background: rgba(0, 0, 0, 0.12) 0 0 no-repeat;
  z-index: 2;
  cursor: pointer;
  border: none;
  position: absolute;
  top: 45%;
  width: 40px;
  height: 56px;
}

.gbtn:hover{
  background-color: rgba(0, 0, 0, 0.20);
}

.gbtn path {
  fill: #fff;
}

.gprev {
  left: 30px;
}

.gnext {
  right: 30px;
}

.gclose {
  width: 40px;
  height: 40px;
  top: 1vh;
  right: 2vw;
  opacity: .7;
}

.gclose > svg {
  width: 20px;
  margin: 0 auto;
}

.gclose:hover {
  opacity: 1;
}

.gbtn.disabled {
  opacity: .1;
}

/* hidden */

.glightbox-closing .gbtn {
  opacity: 0 !important;
}

.gslide:not(.loaded) .gslide-description {
  display: none;
}

.glightbox-container.inactive {
  display: none;
}

.zoomed .gslide-description {
  display: none;
}


